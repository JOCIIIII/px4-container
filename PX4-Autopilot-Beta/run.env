# CONFIGURATION FILE FOR docker-compose.wsl.yml
## USE ONLY FOR WSL ENVIRONMENT WITH WSLg AVAILABILITY (WINDOWS 11)

# -------- [GENERIC DISPLAY SETTINGS] ---------

## ------- GENERATE IT BY SHELL SCRIPT --------
## ---------- DO NOT MODIFY MANUALLY ----------
DISPLAY=:0
WAYLAND_DISPLAY=wayland-0
XDG_RUNTIME_DIR=/run/user/1000
## --------------------------------------------

## --------------- STATIC VALUES --------------
## --------------- DO NOT MODIFY --------------
## ---- UNLESS YOU KNOW WHAT YOU ARE DOING ----
QT_NO_MITSHM=1
LD_LIBRARY_PATH=/usr/lib/wsl/lib
X11_SOCKET_DIR=/tmp/.X11-unix
NVIDIA_DRIVER_CAPABILITIES=all
IPC_MODE=host
## --------------------------------------------

## -------------- RENDER-RELATED --------------
# SET TO 1 IF YOU USE OGRE2
LIBGL_ALWAYS_SOFTWARE=0
## --------------------------------------------



# ------- [CONTAINER SERVICE SETTINGS] --------

## --------------- STATIC VALUES --------------
## --------------- DO NOT MODIFY --------------
## ---- UNLESS YOU KNOW WHAT YOU ARE DOING ----
CONTAINER_NET_NAME=sitl-net
CONTAINER_NET_SUBNET=172.21.0.0/24
CONTAINER_NET_GATEWAY=172.21.0.1

CONTAINER_PX4_ADDR=172.21.0.5
CONTAINER_SIM_ADDR=172.21.0.6
CONTAINER_QGC_ADDR=172.21.0.7
CONTAINER_ROS2_MAIN_ADDR=172.21.0.8
## --------------------------------------------


## ----- PX4-ROS2 HUMBLE CONTAINER SERVICE ----
CONTAINER_PX4_NAME=sitl-px4-001
CONTAINER_PX4_HOSTNAME=${CONTAINER_PX4_NAME}
CONTAINER_PX4_IMAGE=kestr3l/px4:1.14.0-rc1-0.0.2

GZ_PARTITION=relay
GZ_RELAY=${CONTAINER_SIM_ADDR}
GZ_IP=${CONTAINER_PX4_ADDR}

SITL_TYPE=gazebo
SITL_AIRFRAME_ID=4001
SITL_AIRFRAME=x500
SITL_POSE="0,0,1"

DEBUG_MODE=0
EXPORT_ENV=1
## --------------------------------------------


## ----- Gazebo-Garden CONTAINER SERVICE -----
CONTAINER_SIM_NAME=sitl-sim
CONTAINER_SIM_HOSTNAME=${CONTAINER_SIM_NAME}
CONTAINER_SIM_IMAGE=kestr3l/gazebo:garden-0.0.1-dev

GZ_PARTITION=relay

PX4_GZ_MODELS=/home/user/PX4-Autopilot/Tools/simulation/gz/models
PX4_GZ_WORLDS=/home/user/PX4-Autopilot/Tools/simulation/gz/worlds

GZ_SIM_USER_RESOURCE_PATH=/home/user/gazebo

DEBUG_MODE=0
EXPORT_ENV=1
## --------------------------------------------


## ----- QGroundControl CONTAINER SERVICE -----
CONTAINER_QGC_NAME=sitl-qgc
CONTAINER_QGC_HOSTNAME=${CONTAINER_QGC_NAME}
CONTAINER_QGC_IMAGE=kestr3l/qgc-app:nobg-4.0.0
## --------------------------------------------